<div class="container mt-3">
  <h1 class="text-center p-3"><strong>Jewelries</strong></h1>

<%= form_with url: jewelries_path, method: :get, class: "d-flex my-3" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a Jewelry"
  %>
  <%= submit_tag "Search", class: "btn btn-dark" %>
<% end %>
  <div class= "cards">
    <% @jewelries.each do |jewelry| %>
      <div class="card card-trip" style="width: 18rem;">
        <%= image_tag "https://source.unsplash.com/featured?jewelry&#{rand(500)}" %>
        <div class="card-trip-infos">
          <div>
            <h2><%= link_to jewelry.name, jewelry_path(jewelry), class: 'text-black text-decoration-none'%></h2>
            <p><%= jewelry.detail %></p>
          </div>
          <h2 class="card-trip-pricing">Â¥<%= jewelry.price %></h2>
          <img src="https://avatars.githubusercontent.com/u/121933082?v=4" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    <% end %>
  </div>
</div>
