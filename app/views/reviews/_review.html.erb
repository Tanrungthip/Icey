<p class="m-5">
  <% review.rating.times do %>
    <i class="fas fa-star"></i>
  <% end %>
  <% (5 - review.rating).times do %>
    <i class="far fa-star"></i>
  <% end %><br>
  <i class="fa-sharp fa-solid fa-quote-left fa-2x"></i>
  <%= review.content %>
  <hr style="height:1px;border:none;color:#333;background-color:#333;">
</p>
